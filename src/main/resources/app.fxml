<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:id="main" prefHeight="926.0" prefWidth="1228.0" xmlns="http://javafx.com/javafx/8.0.141"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.muni.fi.pb138.ODSVideo.gui.AppController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
              <MenuItem mnemonicParsing="false" onAction="#selectFile" text="Openâ€¦"/>
            <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem fx:id="miSave" disable="true" mnemonicParsing="false" onAction="#saveFile" text="Save"/>
            <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem mnemonicParsing="false" onAction="#quitApplication" text="Quit"/>
          </items>
        </Menu>
      </menus>
    </MenuBar>
      <HBox prefHeight="821.0" prefWidth="1589.0" spacing="20.0">
         <children>
             <VBox alignment="CENTER_LEFT" prefHeight="813.0" prefWidth="437.0" HBox.hgrow="ALWAYS">
               <children>
                   <ComboBox fx:id="globalCategorySelector" disable="true" prefHeight="26.0" prefWidth="739.0"
                             promptText="Select movie category..."/>
                   <HBox alignment="CENTER_LEFT" prefHeight="112.0" prefWidth="370.0" spacing="10.0"
                         VBox.vgrow="ALWAYS">
                     <children>
                         <Button fx:id="btNewCategory" disable="true" mnemonicParsing="false" onAction="#createCategory"
                                 text="New Category"/>
                         <Button fx:id="btDeleteCategory" disable="true" mnemonicParsing="false"
                                 onAction="#deleteCategory" text="Delete Category"/>
                         <Button fx:id="btRenameCategory" disable="true" mnemonicParsing="false"
                                 onAction="#renameCategory" text="Rename Category"/>
                     </children>
                  </HBox>
                   <ListView fx:id="movieSelector" prefHeight="653.0" prefWidth="384.0"/>
                   <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                     <children>
                         <Button fx:id="btNewMovie" disable="true" mnemonicParsing="false" onAction="#createMovie"
                                 text="New Movie"/>
                         <Button fx:id="btDeleteMovie" disable="true" mnemonicParsing="false" onAction="#deleteMovie"
                                 text="Delete Movie"/>
                         <Button fx:id="btOpenFinder" disable="true" mnemonicParsing="false" onAction="#openFinder"
                                 text="Find Movies"/>
                     </children>
                  </HBox>
               </children>
                 <HBox.margin>
                     <Insets top="20.0"/>
                 </HBox.margin>
            </VBox>
             <GridPane alignment="TOP_CENTER" prefHeight="190.0" prefWidth="699.0" vgap="50.0">
                 <columnConstraints>
                     <ColumnConstraints hgrow="SOMETIMES" maxWidth="344.0" minWidth="10.0" prefWidth="218.0"/>
                     <ColumnConstraints hgrow="SOMETIMES" maxWidth="481.0" minWidth="10.0" prefWidth="481.0"/>
                 </columnConstraints>
                 <rowConstraints>
                     <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                     <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                     <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                     <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                     <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                     <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                     <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                 </rowConstraints>
                 <children>
                     <Label text="Name" GridPane.rowIndex="1"/>
                     <Label text="Length" GridPane.rowIndex="2"/>
                     <Label text="Actors" GridPane.rowIndex="3"/>
                     <Label text="Release year" GridPane.rowIndex="4"/>
                     <Label text="Status" GridPane.rowIndex="5"/>
                     <TextField fx:id="tfMovieLength" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="2">
                         <GridPane.margin>
                             <Insets/>
                         </GridPane.margin>
                     </TextField>
                     <TextField fx:id="tfMovieName" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                     <TextField fx:id="tfMovieActors" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                     <TextField fx:id="tfMovieRelease" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                     <Label text="Genre"/>
                     <Button fx:id="btSaveMovie" alignment="CENTER" disable="true" mnemonicParsing="false"
                             onAction="#saveMovie" prefHeight="48.0" prefWidth="110.0" text="Save Movie"
                             GridPane.rowIndex="6"/>
                     <ComboBox fx:id="localCategorySelector" disable="true" prefHeight="26.0" prefWidth="594.0"
                               GridPane.columnIndex="1"/>
                     <ComboBox fx:id="cbMovieStatus" disable="true" prefHeight="26.0" prefWidth="628.0"
                               GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                 </children>
             </GridPane>
         </children>
          <VBox.margin>
              <Insets bottom="50.0" left="20.0" right="20.0" top="50.0"/>
          </VBox.margin>
      </HBox>
  </children>
</VBox>
